@model Modulo2IA_CBR_Telemoveis.Models.Telemovel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Avaliação";
}
<h1 style="text-shadow:initial">Quanto vale o seu telemóvel?</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr class="btn-default" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h4>Marca</h4>
            <div class="form-group">
                <div class="col-md-offset-1">
                    @Html.DropDownListFor(model => model.idMarca, (SelectList)ViewBag.ListaMarcas, "Selecione a Marca do seu Modelo", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                    <div class="col-md-12">
                        @Html.ValidationMessage("marca", "", new { @class = "text-danger" })
                    </div>
                </div>

            <hr />
            <h4>Memória</h4>
            <div class="form-group">
                @Html.Label("RAM: (Gigabytes)", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("ram", "", new { @type = "number", min = "0.1", step = "0.1" })
                    @Html.ValidationMessage("ram", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Interna: (Gigabytes)", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("interna","", new { @type = "number", min = "1"})
                    @Html.ValidationMessage("interna", "", new { @class = "text-danger" })
                </div>
            </div>

          
            <hr />
            <h4>Ecrã</h4>
            <div class="form-group">
                @Html.Label("Resolução:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Ecra.idResoluçãoEcra, (SelectList)ViewBag.ListaRes, "Selecione a resolução do seu modelo", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("resolução", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tamanho: (Polegadas)", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("tamanho", "", new { @type = "number", min = "0.1", step = "0.1" })
                    @Html.ValidationMessage("tamanho", "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <h4>Processador</h4>
            <div class="form-group">
                @Html.Label("Velocidade: (GHz)", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("velocidade", "", new { @type = "number", min = "0.1", step = "0.1" })
                    @Html.ValidationMessage("velocidade", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Número de Núcleos:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("nucleos", "", new { @type = "number", min = "1" })
                    @Html.ValidationMessage("nucleos", "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <h4>Cameras</h4>
            <div class="form-group">
                @Html.Label("Frontal: (Megapixels)", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("frontal", "", new { @type = "number", min = "0.1", step = "0.1" })
                    @Html.ValidationMessage("frontal", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Traseira: (Megapixels)", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("traseira", "", new { @type = "number", min = "0.1", step = "0.1" })
                    @Html.ValidationMessage("traseira", "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <h4>Bateria</h4>
            <div class="form-group">
                @Html.Label("Potência (mAh):", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("bateria", "", new { @type = "number", min = "1"})
                    @Html.ValidationMessage("bateria", "", new { @class = "text-danger" })
                </div>
            </div>

            <hr />
            <h4>Em que estado se encontra o seu telemóvel?</h4>
            <div class="form-group">
                <div class="col-md-10"> <br/>
                    @Html.DropDownListFor(model => model.idEstado,(SelectList)ViewBag.ListaEstados, "Selecione a estado do seu telemóvel", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("estado", "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <h4>Quantos meses tem o seu telemóvel?</h4>
            <div class="form-group">
                <div class="col-md-10"><br />
                    @Html.TextBox("idade", "", "", new { @type = "number", min = "1" })
                    @Html.ValidationMessage("idade", "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-0 col-md-10">
                    <input type="submit" value="Avalie o meu telemóvel" class="btn btn-primary" />
                </div>
            </div>
        </div>   
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>