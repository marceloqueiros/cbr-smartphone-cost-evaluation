@model Modulo2IA_CBR_Telemoveis.Models.Telemovel

@{
    ViewBag.Title = "ValorAvaliação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@ViewBag.Avaliação</h2>

<div>
    <hr />
    <h4>Telemovel:</h4>
   
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Marca")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.marca.nome)
        </dd>

        <dt>
            @Html.DisplayName("Bateria (mAh)")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.mAhBateria)
        </dd>
        <dt>
            @Html.DisplayName("RAM (GB)")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ram)
        </dd>

        <dt>
            @Html.DisplayName("Memória Interna (GB)")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.memoriaInterna)
        </dd>

        <dt>
            @Html.DisplayName("Tamanho Ecra")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ecra.tamanho)
        </dd>

        <dt>
            @Html.DisplayName("Resolução Ecra")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ecra.ResoluçãoEcra.designação)
        </dd>

        <dt>
            @Html.DisplayName("Velocidade (GHz)")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Processador.velocidadeProcessador)
        </dd>

        <dt>
            @Html.DisplayName("Núcleos Processador")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Processador.nucleosProcessador)
        </dd>

        <dt>
            @Html.DisplayName("Camera Frontal (MP)")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Camera.resolucaoFrontal)
        </dd>

        <dt>
            @Html.DisplayName("Camera traseira (MP)")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Camera.resolucaoTraseira)
        </dd>

        <dt>
            @Html.DisplayName("Estado")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado.designação)
        </dd>
        <dt>
            @Html.DisplayName("Idade (Meses)")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.idade)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Avaliar outro telemóvel.", "Avaliação")
</p>
